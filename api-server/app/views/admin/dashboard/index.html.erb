  <h1>Dashboard</h1>
</div>

<div class="stats-grid">
  <div class="stat-card">
    <div class="label">Total Users</div>
    <div class="value"><%= @total_users %></div>
  </div>
  <div class="stat-card">
    <div class="label">Active Rooms</div>
    <div class="value"><%= @active_rooms %></div>
  </div>
  <div class="stat-card">
    <div class="label">Games Played Today</div>
    <div class="value"><%= @games_played_today %></div>
  </div>
  <div class="stat-card">
    <div class="label">Total Rooms</div>
    <div class="value"><%= @total_rooms %></div>
  </div>
  <div class="stat-card">
    <div class="label">Frozen Users</div>
    <div class="value"><%= @frozen_users %></div>
